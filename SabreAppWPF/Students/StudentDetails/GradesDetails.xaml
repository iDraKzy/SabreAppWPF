<Page x:Class="SabreAppWPF.Students.StudentDetails.GradesDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SabreAppWPF.Students.StudentDetails"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GradesDetails">

    <Grid>
        <DataGrid x:Name="gradeDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding CreationDate}"/>
                <DataGridTextColumn Header="Note" Binding="{Binding Grade}"/>
                <DataGridTextColumn Header="Coefficient" Binding="{Binding Coefficient}"/>
            </DataGrid.Columns>
        </DataGrid>
        </Grid>
</Page>
